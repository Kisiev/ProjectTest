<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.Base" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorNotActive</item>
        <item name="colorControlActivated">@color/whiteColor</item>
    </style>

    <style name="ActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>


    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/enter_pull_in</item>
        <item name="android:windowExitAnimation">@anim/enter_out</item>
    </style>
</resources>
