<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_register_child_list_fragment"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:id="@+id/register_child_liner_layout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:id="@+id/child_name_zav_text_view"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_child_liner_layout"
            android:gravity="end">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_button_register_child"
                android:textColor="@color/colorOrange"
                android:background="@color/colorForApacityNull"
                android:text="@string/edit"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorForApacityNull"
                android:textColor="@color/colorOrange"
                android:layout_toRightOf="@+id/edit_button_register_child"
                android:id="@+id/delete_button_register_child"
                android:text="@string/delete"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>