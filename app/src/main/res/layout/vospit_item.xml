<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_lay_vospit"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_vospit_item">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/liner_vospit_item"
        android:layout_height="wrap_content">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/liner_con"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_time"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_service"
                android:textSize="10pt"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                 />
        </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:layout_weight="1"
                android:layout_toRightOf="@id/name_service" />
        </LinearLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeTVinCard"
        android:textColor="@color/black"
        android:layout_weight="1"
            android:textSize="8pt"
            android:textStyle="italic"
        android:gravity="center|top"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/false_tv"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="10pt"
            android:textStyle="italic|bold"
            android:visibility="gone"
            android:gravity="center|top" />

</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:layout_below="@+id/liner_vospit_item">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_button_raspisanie"
        android:textColor="@color/black"
        android:background="@color/colorForApacityNull"
        android:text="@string/edit"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorForApacityNull"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/edit_button_raspisanie"
        android:id="@+id/delete_button_raspisanie"
        android:text="@string/delete"/>
</RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

