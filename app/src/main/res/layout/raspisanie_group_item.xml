<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_group_raspisanie"
    android:background="@color/colorForApacityNull">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorForApacityNull"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorForApacityNull"
            android:gravity="center|start"
            android:text="asf"
            android:id="@+id/name_child_raspisanie"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorForApacityNull"
            android:gravity="end"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/colorForApacityNull"
                android:src="@mipmap/green_smile"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/colorForApacityNull"
                android:src="@mipmap/yellow_smile"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/colorForApacityNull"
                android:src="@mipmap/red_smile"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>