<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">
    <LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="15pt"
        android:text="Добавить деятельность"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.App.Base_Dialog"
        android:hint="@string/name_activity"
        android:id="@+id/name_service_editorET"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_service_add_SP"
        android:text="@string/type_service"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.App.Base_Dialog"
        android:hint="Направление"
        android:id="@+id/edit_directET"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Время начала"
            android:theme="@style/Theme.App.Base_Dialog"
            android:id="@+id/since_edit_ET"
            android:inputType="datetime"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Время конца"
            android:layout_weight="1"
            android:theme="@style/Theme.App.Base_Dialog"
            android:id="@+id/till_edit_ET"
            android:inputType="datetime"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:background="@color/colorForApacityNull"
            android:id="@+id/cancel_serviceBT"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_service"
            android:background="@color/colorForApacityNull"
            android:id="@+id/save_serviceBT"/>

    </LinearLayout>

</LinearLayout>
    </ScrollView>