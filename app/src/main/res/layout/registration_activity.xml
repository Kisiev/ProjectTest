<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical|center_horizontal"
    android:fillViewport="true">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reg_imageView"/>
    <ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect"
        android:id="@+id/imageView3"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/start_end_margin"
            android:text="Личные данные"
            android:textSize="12pt"
            android:id="@+id/header_registration"
            android:textColor="@color/whiteColor"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/whiteColor"
            android:theme="@style/Theme.App.Base"
            android:hint="Имя"
            android:id="@+id/name_user_edit"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:theme="@style/Theme.App.Base"
            android:textColorHint="@color/whiteColor"
            android:hint="Фамилия"
            android:id="@+id/surname_user_edit"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/whiteColor"
            android:theme="@style/Theme.App.Base"
            android:hint="Отчество"
            android:id="@+id/lastname_user_edit"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/region_spinner_registration">

        </Spinner>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city_spinner_registration" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kinder_garten_spinner_registration" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioBattonGroup_registration">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/child_RB"
                android:text="Ребенок"
                android:textColor="@color/whiteColor"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/parent_RB"
                android:text="Родитель"
                android:textColor="@color/whiteColor"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/zavDetSadRB"
                android:text="Заведующая детским садом"
                android:textColor="@color/whiteColor"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/vospitatel"
                android:text="Воспитатель"
                android:textColor="@color/whiteColor"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contact_face_RB"
                android:text="Контактное лицо"
                android:textColor="@color/whiteColor"/>
        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:id="@+id/registration_button"
            android:text="@string/registration_in"
            android:background="@color/colorAlphaNULL"
            android:textColor="@color/whiteColor"
            android:textStyle="italic"
            android:layout_gravity="end"
            android:textSize="5pt"
            />

    </LinearLayout>
    </LinearLayout>
    </ScrollView>

  </RelativeLayout>